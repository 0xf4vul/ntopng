[Unit]
Description=ntopng high-speed web-based traffic monitoring and analysis tool (libpcap)
After=network.target syslog.target redis.service
Requires=

[Service]
Type=simple

ExecStartPre=/bin/sh -c '/bin/sed "/-e.*$\\|-G.*\\|--daemon.*\\|--pid.*/s/^/#/" /etc/ntopng/ntopng.conf > /run/ntopng.conf'

ExecStart=/usr/local/bin/ntopng /run/ntopng.conf

ExecStopPost=-/bin/rm -rf /run/ntopng.conf

Restart=on-abnormal
RestartSec=5

[Install]
WantedBy=multi-user.target
